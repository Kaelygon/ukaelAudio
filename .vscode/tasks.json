// tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake (active DEBUG)",
            "type": "shell",
            "command": "${workspaceFolder}/CMakeBuild.sh",
            "args": [
                "ACTIVE",
                "DEBUG",
                "./${relativeFileDirname}",
                "${fileBasenameNoExtension}",
            ],
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
